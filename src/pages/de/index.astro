  <!-- Filter Tabs Script -->
  <script>
    import { animate, stagger } from "animejs";

    document.addEventListener("DOMContentLoaded", () => {
      const filterContainer = document.getElementById("review-filters");
      const grid = document.getElementById("reviews-grid");
      const loadMoreBtn = document.getElementById("load-more-btn");
      const loadMoreContainer = document.getElementById("load-more-container");

      if (!filterContainer || !grid) return;

      const buttons = filterContainer.querySelectorAll(
        ".filter-tab",
      ) as NodeListOf<HTMLElement>;
      const cards = grid.querySelectorAll(
        ".card[data-brand]",
      ) as NodeListOf<HTMLElement>;

      // Responsive Limit Logic
      const isMobile = window.innerWidth <= 640;
      // Show 8 items on desktop (2 rows of 4), 12 on mobile carousel
      const INITIAL_LIMIT = isMobile ? 12 : 8;
      let currentLimit = INITIAL_LIMIT;
      let activeFilter = "all";

      // Mobile Scroll Hint
      if (isMobile && grid.parentElement) {
        const hint = document.createElement("div");
        hint.className = "scroll-hint";
        hint.innerHTML = "‚ûú";
        grid.parentElement.style.position = "relative";
        grid.parentElement.appendChild(hint);
      }

      function animateCards(elements) {
        animate(elements, {
          opacity: [0, 1],
          translateY: [20, 0],
          delay: stagger(100),
          easing: "outQuad",
          duration: 600,
        });
      }

      function render(shouldAnimate = true) {
        if (!grid) return;
        let visibleCount = 0;
        let matchingCount = 0;
        const cardsToShow: HTMLElement[] = [];

        cards.forEach((card) => {
          const brand = card.dataset.brand;
          const matches = activeFilter === "all" || brand === activeFilter;

          if (matches) {
            matchingCount++;
            if (matchingCount <= currentLimit) {
              if (card.classList.contains("hidden")) {
                card.classList.remove("hidden");
                cardsToShow.push(card);
              }
              visibleCount++;
            } else {
              card.classList.add("hidden");
            }
          } else {
            card.classList.add("hidden");
          }
        });

        // Animate new cards
        if (shouldAnimate && cardsToShow.length > 0) {
          animateCards(cardsToShow);
        }

        // Handle No Results
        const existingMsg = grid.querySelector(".no-results");
        if (existingMsg) existingMsg.remove();

        if (visibleCount === 0) {
          const msg = document.createElement("div");
          msg.className = "no-results";
          msg.textContent = "Noch keine Testberichte f√ºr diese Marke.";
          grid.appendChild(msg);
        }

        // Handle Load More Button
        if (loadMoreContainer) {
          if (matchingCount > currentLimit) {
            loadMoreContainer.classList.remove("hidden");
          } else {
            loadMoreContainer.classList.add("hidden");
          }
        }
      }

      // Initial Render
      const initialVisible = Array.from(cards).slice(0, currentLimit);
      animateCards(initialVisible);
      render(false);

      buttons.forEach((btn) => {
        btn.addEventListener("click", () => {
          buttons.forEach((b) => b.classList.remove("active"));
          btn.classList.add("active");
          activeFilter = btn.dataset.filter || "all";

          if (activeFilter === "all") {
            currentLimit = INITIAL_LIMIT;
          } else {
            currentLimit = 100;
          }

          // Reset opacity for re-animation
          cards.forEach((c) => (c.style.opacity = "0"));
          render(true);
        });
      });

      if (loadMoreBtn) {
        loadMoreBtn.addEventListener("click", () => {
          currentLimit += 6;
          render(true);
        });
      }
    });
  </script>
