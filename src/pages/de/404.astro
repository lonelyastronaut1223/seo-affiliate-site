---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Seite nicht gefunden | Kameraupick" description="Die gesuchte Seite existiert nicht.">
<div class="container error-page">
        <div class="error-container">
            <h1 class="error-code">404</h1>
            <h2 class="error-title">Seite nicht gefunden</h2>
            <p class="error-desc">
                Entschuldigung, die gesuchte Seite existiert nicht oder wurde verschoben.
            </p>

            <div class="btn-row">
                <a href="/de/" class="buy-btn no-underline">
                    ← Zur Startseite
                </a>
                <a href="/de/#testberichte" class="buy-btn no-underline bg-glass">
                    Testberichte ansehen
                </a>
            </div>

            <div class="mt-48">
                <p class="text-muted text-sm">
                    Suchen Sie etwas Bestimmtes?
                </p>
                <div class="link-row">
                    <a href="/de/#testberichte" class="text-accent no-underline">Testberichte</a>
                    <span class="text-muted">·</span>
                    <a href="/de/#ratgeber" class="text-accent no-underline">Ratgeber</a>
                    <span class="text-muted">·</span>
                    <a href="kontakt.html" class="text-accent no-underline">Kontakt</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Service Worker Registration -->
    <script is:inline>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(reg => console.log('SW registered'))
                    .catch(err => console.log('SW registration failed'));
            });
        }
    </script>

    <!-- Anime.js Animation Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.2/anime.min.js" defer></script>
    <script src="../assets/js/animations.min.js" defer></script>
</BaseLayout>
