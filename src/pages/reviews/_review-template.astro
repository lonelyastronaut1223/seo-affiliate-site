---
# Review Article Template
# Copy this file and rename to [product]-review.astro
# Replace all [PLACEHOLDER] values with actual content
---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProductSchema from "../../components/ProductSchema.astro";
import "../../styles/review-page.css";
---

<BaseLayout
    title="[PRODUCT_NAME] Review 2026: [TAGLINE]"
    description="[PRODUCT_NAME] Review 2026: [KEY_SPECS]. Full specs & verdict."
>
    <ProductSchema
        slot="head"
        productName="[PRODUCT_NAME]"
        brand="[BRAND]"
        image="/assets/images/guides/[IMAGE].webp"
        description="[PRODUCT_DESCRIPTION]"
        price={[PRICE]}
        priceCurrency="USD"
        rating={4.7}
        reviewCount={1}
        url="/reviews/[SLUG]"
        breadcrumbs={[
            { name: "[PRODUCT_NAME]", url: "/reviews/[SLUG]" },
        ]}
    />
    <main id="main" class="container">
        <!-- ==================== HERO SECTION ==================== -->
        <section class="hero">
            <div class="hero-grid">
                <div>
                    <h1>[PRODUCT_NAME] Review</h1>
                    <p class="hero-sub">
                        [2-3 sentence intro describing the camera's positioning and key value proposition]
                    </p>
                    <div class="meta review-price-badge">[CATEGORY] · $[PRICE]</div>
                </div>
                <div class="hero-media">
                    <picture>
                        <img
                            src="/assets/images/guides/[IMAGE].webp"
                            alt="[PRODUCT_NAME] camera"
                            loading="eager"
                        />
                    </picture>
                </div>
            </div>
        </section>

        <!-- ==================== PRODUCT CARD ==================== -->
        <section class="section">
            <div class="product-review-card" id="[PRODUCT_ID]">
                <div class="product-review-header-v2">
                    <span class="badge-best">[EMOJI] [BADGE_TEXT]</span>
                    <h2 class="product-title">The Verdict</h2>
                    <p>
                        [Paragraph 1: Technical summary - what the camera is, who it's for]
                    </p>
                    <p>
                        [Paragraph 2: Use case summary - when to choose this camera]
                    </p>
                </div>

                <!-- Rich Specs Table -->
                <table class="specs-table">
                    <tr>
                        <th colspan="2" class="specs-group-header">Imaging</th>
                    </tr>
                    <tr>
                        <th>Sensor</th>
                        <td>[SENSOR_SPEC]</td>
                    </tr>
                    <tr>
                        <th>Processor</th>
                        <td>[PROCESSOR]</td>
                    </tr>
                    <tr>
                        <th>Stabilization</th>
                        <td>[IBIS_SPEC]</td>
                    </tr>
                    <tr>
                        <th>ISO Range</th>
                        <td>[ISO_RANGE]</td>
                    </tr>

                    <tr>
                        <th colspan="2" class="specs-group-header">Autofocus</th>
                    </tr>
                    <tr>
                        <th>AF Points</th>
                        <td>[AF_POINTS]</td>
                    </tr>
                    <tr>
                        <th>AF System</th>
                        <td>[AF_SYSTEM]</td>
                    </tr>
                    <tr>
                        <th>Burst Speed</th>
                        <td>[BURST_SPEED]</td>
                    </tr>

                    <tr>
                        <th colspan="2" class="specs-group-header">Video</th>
                    </tr>
                    <tr>
                        <th>Max Resolution</th>
                        <td>[VIDEO_RESOLUTION]</td>
                    </tr>
                    <tr>
                        <th>Internal Rec</th>
                        <td>[VIDEO_CODEC]</td>
                    </tr>
                    <tr>
                        <th>Profiles</th>
                        <td>[VIDEO_PROFILES]</td>
                    </tr>

                    <tr>
                        <th colspan="2" class="specs-group-header">Build & Connectivity</th>
                    </tr>
                    <tr>
                        <th>Viewfinder</th>
                        <td>[EVF_SPEC]</td>
                    </tr>
                    <tr>
                        <th>Screen</th>
                        <td>[SCREEN_SPEC]</td>
                    </tr>
                    <tr>
                        <th>Card Slots</th>
                        <td>[CARD_SLOTS]</td>
                    </tr>
                    <tr>
                        <th>Weight</th>
                        <td>[WEIGHT]</td>
                    </tr>
                </table>

                <a
                    href="#"
                    class="btn-buy"
                    data-product="[PRODUCT_ID]"
                    rel="sponsored noopener noreferrer"
                    target="_blank"
                >
                    Check Price on Amazon &rarr;
                </a>
            </div>

            <!-- ==================== PROS/CONS ==================== -->
            <div class="pros-cons">
                <div class="pros">
                    <h4>What We Like</h4>
                    <ul>
                        <li>[Pro 1 with substance]</li>
                        <li>[Pro 2 with substance]</li>
                        <li>[Pro 3 with substance]</li>
                        <li>[Pro 4 with substance]</li>
                    </ul>
                </div>

                <div class="cons">
                    <h4>Trade-offs</h4>
                    <ul>
                        <li>[Con 1 - honest assessment]</li>
                        <li>[Con 2 - honest assessment]</li>
                        <li>[Con 3 - honest assessment]</li>
                        <li>[Con 4 - honest assessment]</li>
                    </ul>
                </div>
            </div>
        </section>

        <!-- ==================== IN-DEPTH PERFORMANCE ==================== -->
        <section class="section">
            <h2 class="section-title">In-Depth Performance</h2>

            <div class="content-block">
                <h3>Image Quality & Sensor Performance</h3>
                <p>
                    [Paragraph 1: Sensor specs, resolution, dynamic range, color science.
                    ~100-120 words describing technical imaging capabilities]
                </p>
                <p>
                    [Paragraph 2: High-ISO performance, noise characteristics, real-world
                    scenarios where the sensor excels. ~80-100 words]
                </p>
            </div>

            <div class="content-block">
                <h3>Autofocus System</h3>
                <p>
                    [Paragraph 1: AF points, coverage, subject detection types, eye AF
                    reliability. ~100-120 words on technical AF capabilities]
                </p>
                <p>
                    [Paragraph 2: Tracking performance, low-light AF, real-world reliability,
                    comparison to competitors. ~80-100 words]
                </p>
            </div>

            <div class="content-block">
                <h3>Video Capabilities</h3>
                <p>
                    [Paragraph 1: Resolution options, codec support, slow motion, log profiles.
                    ~100-120 words on video specs]
                </p>
                <p>
                    [Paragraph 2: Heat management, recording limits, stabilization in video,
                    focus performance for video. ~80-100 words]
                </p>
            </div>

            <div class="content-block">
                <h3>Ergonomics & Build</h3>
                <p>
                    [Paragraph 1: Body size/weight, grip, button layout, screen type, EVF.
                    ~100-120 words on physical design]
                </p>
                <p>
                    [Paragraph 2: Weather sealing, battery life, connectivity, card slots.
                    ~80-100 words on practical features]
                </p>
            </div>
        </section>

        <!-- ==================== IDEAL LENSES ==================== -->
        <section class="section">
            <h2 class="section-title">Ideal Lenses for the [PRODUCT_NAME]</h2>
            <div class="recommendations-grid">
                <div class="recommendation-card">
                    <h4>[LENS_1_NAME]</h4>
                    <p>
                        [2 sentences describing why this lens pairs well with the camera]
                    </p>
                </div>

                <div class="recommendation-card">
                    <h4>[LENS_2_NAME]</h4>
                    <p>
                        [2 sentences describing why this lens pairs well with the camera]
                    </p>
                </div>

                <div class="recommendation-card">
                    <h4>[LENS_3_NAME]</h4>
                    <p>
                        [2 sentences describing why this lens pairs well with the camera]
                    </p>
                </div>
            </div>
        </section>

        <!-- ==================== FAQ SECTION ==================== -->
        <section class="section faq-section">
            <h2 class="section-title">[PRODUCT_NAME] FAQ</h2>

            <div class="faq-container">
                <div class="faq-item">
                    <h3 class="faq-question">
                        [FAQ Question 1]
                        <span class="faq-toggle">+</span>
                    </h3>
                    <div class="faq-answer" style="max-height: 0; overflow: hidden;">
                        <p>
                            [Substantive answer with real value - 50-80 words]
                        </p>
                    </div>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">
                        [FAQ Question 2]
                        <span class="faq-toggle">+</span>
                    </h3>
                    <div class="faq-answer" style="max-height: 0; overflow: hidden;">
                        <p>
                            [Substantive answer with real value - 50-80 words]
                        </p>
                    </div>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">
                        [FAQ Question 3]
                        <span class="faq-toggle">+</span>
                    </h3>
                    <div class="faq-answer" style="max-height: 0; overflow: hidden;">
                        <p>
                            [Substantive answer with real value - 50-80 words]
                        </p>
                    </div>
                </div>

                <div class="faq-item">
                    <h3 class="faq-question">
                        Who should buy the [PRODUCT_NAME]?
                        <span class="faq-toggle">+</span>
                    </h3>
                    <div class="faq-answer" style="max-height: 0; overflow: hidden;">
                        <p>
                            [Describe ideal user profiles and use cases - 50-80 words]
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- ==================== FINAL RECOMMENDATION ==================== -->
        <section class="section">
            <div class="final-verdict">
                <h2>Final Recommendation</h2>
                <p>
                    [Summary paragraph: 2-3 sentences wrapping up the camera's value proposition]
                </p>
                <p>
                    <strong>Buy it if:</strong> [1-2 sentences describing ideal buyer]
                </p>
                <p>
                    <strong>Skip it if:</strong> [1-2 sentences describing when to choose alternatives]
                </p>
            </div>
        </section>

        <!-- ==================== AUTHOR BOX ==================== -->
        <section class="section author-box" style="background: var(--bg-soft); border-radius: 12px; padding: 24px; margin-top: 32px;">
            <div style="display: flex; gap: 16px; align-items: flex-start;">
                <img src="/assets/images/team-avatar.webp" alt="cameraupick Editorial Team" style="width: 64px; height: 64px; border-radius: 50%; object-fit: contain; background: white; border: 2px solid var(--accent); padding: 4px;">
                <div>
                    <h4 style="margin: 0 0 8px 0;">Written by cameraupick Editorial Team</h4>
                    <p style="margin: 0; color: var(--muted); font-size: 14px;">
                        Our team of professional photographers and videographers has 10+ years of experience testing cameras. We buy our own gear and provide honest, unbiased reviews.
                    </p>
                    <a href="/about" style="font-size: 14px; margin-top: 8px; display: inline-block;">Learn more about our testing process →</a>
                </div>
            </div>
        </section>
    </main>
<script is:inline src="/assets/js/faq-accordion.js"></script>
</BaseLayout>
