.price-badge {
  display: inline-block;
  background: linear-gradient(135deg, var(--accent) 0%, #e74c3c 100%);
  color: white;
  padding: 8px 20px;
  border-radius: 24px;
  font-weight: 700;
  font-size: 20px;
  margin-bottom: 16px;
}

.key-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.spec-chip {
  background: var(--surface);
  border: 1px solid var(--border);
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 13px;
  color: var(--foreground);
  font-weight: 500;
}

.card-body {
  padding: 0 32px 32px 32px;
}

.quick-verdict {
  color: var(--foreground);
  line-height: 1.7;
  margin-bottom: 24px;
  font-size: 16px;
}

.pros-cons-inline {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-bottom: 24px;
  padding: 20px;
  background: var(--background);
  border-radius: 12px;
}

@media (max-width: 768px) {
  .pros-cons-inline {
    grid-template-columns: 1fr;
  }
}

.pros-mini, .cons-mini {
  font-size: 14px;
  line-height: 1.6;
}

.pros-mini strong {
  color: #27ae60;
}

.cons-mini strong {
  color: #e74c3c;
}

.card-cta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 24px;
  background: var(--accent);
  border-radius: 12px;
  color: white;
  font-weight: 700;
  transition: all 0.2s;
}

.product-card-interactive:hover .card-cta {
  background: #e74c3c;
  padding-right: 32px;
}

.card-cta .arrow {
  font-size: 24px;
  transition: transform 0.2s;
}

.product-card-interactive:hover .arrow {
  transform: translateX(4px);
}

/* Budget Section Headers */
.section-title-budget {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 32px;
  font-size: 28px;
}

.budget-badge {
  padding: 8px 16px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 700;
  white-space: nowrap;
}

.budget-low {
  background: #27ae60;
  color: white;
}

.budget-mid {
  background: #3498db;
  color: white;
}

.budget-high {
  background: #9b59b6;
  color: white;
}

/* Guide Grid */
.guide-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 24px;
}

.guide-card {
  background: var(--surface);
  padding: 24px;
  border-radius: 12px;
  border-left: 4px solid var(--accent);
}

.guide-card h3 {
  margin-top: 0;
  color: var(--accent);
}

/* FAQ Styling */
.faq-container {
  max-width: 800px;
}

.faq-item {
  background: var(--surface);
  margin-bottom: 16px;
  border-radius: 12px;
  overflow: hidden;
  border: 1px solid var(--border);
}

.faq-item summary {
  padding: 20px 24px;
  cursor: pointer;
  font-weight: 600;
  list-style: none;
  transition: background 0.2s;
}

.faq-item summary:hover {
  background: var(--background);
}

.faq-item summary h3 {
  margin: 0;
  font-size: 18px;
  display: inline;
}

.faq-answer {
  padding: 0 24px 20px 24px;
  color: var(--muted);
  line-height: 1.7;
}

.faq-answer p {
  margin-bottom: 12px;
}

.faq-answer strong {
  color: var(--foreground);
}

/* Comparison Table */
.comparison-table-wrapper {
  overflow-x: auto;
}

.comparison {
  width: 100%;
  border-collapse: collapse;
  background: var(--surface);
  border-radius: 12px;
  overflow: hidden;
}

.comparison thead {
  background: var(--background);
}

.comparison th {
  padding: 16px;
  text-align: left;
  font-weight: 700;
  color: var(--accent);
  border-bottom: 2px solid var(--border);
}

.comparison td {
  padding: 16px;
  border-bottom: 1px solid var(--border);
}

.comparison tbody tr:hover {
  background: var(--background);
}

.link-arrow {
  color: var(--accent);
  text-decoration: none;
  font-weight: 600;
  transition: transform 0.2s;
  display: inline-block;
}

.link-arrow:hover {
  transform: translateX(4px);
}

/* Meta Badge */
.meta {
  color: var(--muted);
  font-size: 14px;
  margin-top: 16px;
}
</style>

<script>
// Smooth scroll for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function (e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute('href'));
    if (target) {
      target.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
    }
  });
});

// Track card clicks
document.querySelectorAll('.product-card-interactive').forEach(card => {
  card.addEventListener('click', () => {
    const productName = card.querySelector('h3').textContent;
    console.log(`Clicked: ${productName}`);
    // Add analytics tracking here if needed
  });
});
</script>
