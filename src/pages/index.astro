        padding: 0.4rem 0.9rem;
        font-size: 0.8rem;
      }
    }
  </style>

  <!-- Filter Tabs Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const filterContainer = document.getElementById("review-filters");
      const grid = document.getElementById("reviews-grid");

      if (!filterContainer || !grid) return;

      const buttons = filterContainer.querySelectorAll(".filter-tab");
      const cards = grid.querySelectorAll(".card[data-brand]");

      buttons.forEach((btn) => {
        btn.addEventListener("click", () => {
          // Update active state
          buttons.forEach((b) => b.classList.remove("active"));
          btn.classList.add("active");

          const filter = btn.dataset.filter;
          let visibleCount = 0;

          cards.forEach((card) => {
            const brand = card.dataset.brand;
            const shouldShow = filter === "all" || brand === filter;

            if (shouldShow) {
              card.classList.remove("hidden");
              visibleCount++;
            } else {
              card.classList.add("hidden");
            }
          });

          // Remove existing no-results message
          const existingMsg = grid.querySelector(".no-results");
          if (existingMsg) existingMsg.remove();

          // Show message if no results
          if (visibleCount === 0) {
            const msg = document.createElement("div");
            msg.className = "no-results";
            msg.textContent = "No reviews found for this brand yet.";
            grid.appendChild(msg);
          }
        });
      });
    });
  </script>
