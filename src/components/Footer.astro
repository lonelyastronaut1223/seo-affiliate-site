---
/**
 * Footer Component - Internationalized version
 * Automatically detects language from URL and shows appropriate links and text
 */
const currentPath = Astro.url.pathname;
const isGerman = currentPath.startsWith("/de");

// Link mappings
const links = isGerman
    ? {
          about: "/de/ueber-uns",
          contact: "/de/kontakt",
          privacy: "/de/datenschutz",
          terms: "/de/agb",
          impressum: "/de/impressum",
      }
    : {
          about: "/about",
          contact: "/contact",
          privacy: "/privacy",
          terms: "/terms",
      };

// Text translations
const texts = isGerman
    ? {
          independentTesting: "✓ Unabhängige Tests",
          noSponsoredReviews: "✓ Keine gesponserten Testberichte",
          realWorldExperience: "✓ Praxiserfahrung",
          about: "Über uns",
          contact: "Kontakt",
          privacy: "Datenschutz",
          terms: "Nutzungsbedingungen",
          impressum: "Impressum",
          sitemap: "Sitemap",
          copyright: "Alle Rechte vorbehalten.",
      }
    : {
          independentTesting: "✓ Independent Testing",
          noSponsoredReviews: "✓ No Sponsored Reviews",
          realWorldExperience: "✓ Real-World Experience",
          about: "About",
          contact: "Contact",
          privacy: "Privacy",
          terms: "Terms",
          sitemap: "Sitemap",
          copyright: "All rights reserved.",
      };
---

<footer class="site-footer">
    <div class="container">
        <!-- Trust Badges -->
        <div class="trust-badges">
            <span class="trust-badge">{texts.independentTesting}</span>
            <span class="trust-badge">{texts.noSponsoredReviews}</span>
            <span class="trust-badge">{texts.realWorldExperience}</span>
        </div>

        <!-- Brand Partners -->
        <div class="brand-partners">
            <span class="brand-partner">Sony</span>
            <span class="brand-partner">Canon</span>
            <span class="brand-partner">Fujifilm</span>
            <span class="brand-partner">Nikon</span>
            <span class="brand-partner">Panasonic</span>
            <span class="brand-partner">DJI</span>
        </div>

        <div class="footer-content">
            <div class="footer-links">
                <a href={links.about}>{texts.about}</a>
                <a href={links.contact}>{texts.contact}</a>
                <a href={links.privacy}>{texts.privacy}</a>
                <a href={links.terms}>{texts.terms}</a>
                {isGerman && <a href={links.impressum}>{texts.impressum}</a>}
                <a href="/sitemap.xml">{texts.sitemap}</a>
            </div>
            <div class="social-links">
                <a
                    href="https://youtube.com/@Taylor-hv8bj"
                    target="_blank"
                    rel="noopener"
                    aria-label="YouTube"
                >
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                        ></path>
                    </svg>
                </a>
                <a
                    href="https://www.instagram.com/astronaut_taylor"
                    target="_blank"
                    rel="noopener"
                    aria-label="Twitter"
                >
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                        ></path>
                    </svg>
                </a>
                <a
                    href="https://www.instagram.com/astronaut_taylor"
                    target="_blank"
                    rel="noopener"
                    aria-label="Instagram"
                >
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"
